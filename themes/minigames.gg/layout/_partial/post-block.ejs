<article class="post-block">
  <header class="header">
    <!-- <video class="video" src="#" poster="//placehold.it" autoplay></video> -->
    <h1 class="title"><%- titlecase(post.title) %></h1>
    <div class="stats">
      <%- partial('_partial/post-stat', { type: 'players', value: post.players }) %>
      <%- partial('_partial/post-stat', { type: 'time', value: post.duration }) %>
      <!-- <%- partial('_partial/post-stat', { type: 'like', value: '217' }) %> -->
    </div>
  </header>
  <div class="body">
    <%- post.more %>
  </div>
  <footer class="comments">
    <h2>Comments</h2>
    <div id="disqus_thread"></div>
    <script>
      var disqus_config = function () {
        this.page.url = '<%= post.permalink %>'
        this.page.identifier = '<%= post.path %>'
      }

      !(function() {
        var d = document, s = d.createElement('script')
        s.src = '//minigames-gg.disqus.com/embed.js'
        s.setAttribute('data-timestamp', +new Date())
        !(d.head || d.body).appendChild(s)
      })()
    </script>
  </footer>
</article>
